{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "http://localhost:3000",
    "types": [
      "cypress"
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "cypress.config.js", "test", "src", "next.config.cjs"],
  "exclude": ["node_modules", "e2e", "environment.d.ts"]
}
